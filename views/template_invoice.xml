<odoo>
    <template id="report_invoce_inherit" inherit_id="l10n_co_tax_extension.report_invoice_document_inherit">
        <xpath expr="//div[@id='cliente']" position="replace">
            <div class="row" style="margin-bottom:5px;border:1px solid black;" id="cliente">
                <div class="col-5">
                    <b>
                        <span>INFORMACIÓN DEL CLIENTE</span>
                    </b>
                    <br />
                    Cliente :
                    <spt-field="o.partner_id.name" />
                    <br />
                    <strong t-if="o.partner_id.barcode">
                        CÓDIGO:
                        <span t-field="o.partner_id.barcode" />
                    </strong>
                    <br />
                    NIT/C.C:
                    <span t-if="o.partner_id.formatedNit">
                        <span t-field="o.partner_id.formatedNit" />
                    </span>
                    <t t-else="">
                        <span t-if="o.partner_id.xidentification">
                            <span t-field="o.partner_id.xidentification" />
                        </span>
                    </t>
                    <br />
                    Dir.:
                    <span t-if="o.partner_id.street">
                        <span t-field="o.partner_id.street" />
                    </span>
                    ,
                    <span t-if="o.partner_id.street2">
                        <span t-field="o.partner_id.street2" />
                    </span>
                    <br />
                    Tel.:
                    <span t-if="o.partner_id.phone">
                        <span t-field="o.partner_id.phone" />
                        ,
                    </span>
                    <span t-if="o.partner_id.mobile">
                        <span t-field="o.partner_id.mobile" />
                    </span>
                    <br />
                    Correo:
                    <span t-if="o.partner_id.email">
                        <span t-field="o.partner_id.email" />
                    </span>
                    <br />
                    <span t-if="o.partner_id.city">
                        Ciudad:
                        <span t-field="o.partner_id.city" />
                    </span>
                    <br />

                </div>

                <div id="informations" class="col-4">
                    <div t-if="o.name" name="description">
                        <strong>Observación:</strong>
                        <p class="m-0" t-field="o.name" />
                    </div>
                    <div t-if="o.date_invoice" name="invoice_date">
                        <strong>Fecha de Expedición:</strong>
                        <br />
                        <span class="m-0" t-field="o.date_invoice" />
                    </div>
                    <div t-if="o.date_due and o.type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')" name="due_date">
                        <strong>Fecha de Vencimiento:</strong>
                        <br />
                        <span class="m-0" t-field="o.date_due" />
                    </div>
                    <div t-if="o.origin" name="origin">
                        <strong>Fuente: </strong>
                        <span class="m-0" t-field="o.origin" />
                    </div>
                    <div t-if="o.partner_id.ref" name="customer_code">
                        <strong>Código Cliente:</strong>
                        <span class="m-0" t-field="o.partner_id.ref" />
                    </div>
                    <!--div name="reference" t-if="o.reference">
                        <strong>Reference:</strong>
                        <p class="m-0" t-field="o.reference"/>
                    </div-->
                    <!--div>
                     <strong>Comercial: </strong> 
                     <span class="m-0" t-field="o.user_id"/>
                 	</div-->

                    <div t-if="o.payment_term_id" name="payment_term">
                        <strong>Plazo de Pago:</strong>
                        <span t-field="o.payment_term_id.name" />

                    </div>

                </div>
            </div>
        </xpath>
    </template>

    <template id="report_pcking_operations_inherit" inherit_id="stock.report_picking">
        <xpath expr="//t[@t-name='stock.report_picking']" position="replace">
            <t t-name="stock.report_picking">
                <t t-call="web.html_container">
                    <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                        <!--t t-call="web.external_layout"-->


                        <t t-foreach="docs" t-as="o">
                            <!--t t-call="web.external_layout"-->
                            <div class="text-center" align="center" style="font-size:16px;border-bottom:1px solid black">
                                <!--strong><span style="font-size:12px" t-field="o.picking_type_id.warehouse_id.partner_id.name"></span></strong><br/-->
                                <strong t-field="o.name" class="text-center" />
                            </div>

                            <div class="page" style="font-size:12px;">
                                <div class="col-12" style="border-bottom:1px solid black" align="center">
                                    <b>
                                        CLIENTE:
                                        <span t-if="o.partner_id.name">
                                            <span t-field="o.partner_id.name" />
                                        </span>
                                    </b>
                                    <br />
                                    <strong t-if="o.partner_id.barcode">
                                        CÓDIGO:
                                        <span t-field="o.partner_id.barcode" />
                                    </strong>
                                    <br />
                                    NIT/CC:
                                    <span t-if="o.partner_id.xidentification">
                                        <span t-field="o.partner_id.xidentification" />
                                    </span>
                                    E-mail:
                                    <span t-if="o.partner_id.email">
                                        <span t-field="o.partner_id.email" />
                                    </span>
                                    <br />
                                    Tel:
                                    <span t-if="o.partner_id.phone">
                                        <span t-field="o.partner_id.phone" />
                                        ,
                                    </span>
                                    <span t-if="o.partner_id.mobile">
                                        <span t-field="o.partner_id.mobile" />
                                    </span>
                                    <br />
                                    Dirección:
                                    <span t-if="o.partner_id.street">
                                        <span t-field="o.partner_id.street" />
                                    </span>
                                    ,
                                    <span t-if="o.partner_id.street2">
                                        <span t-field="o.partner_id.street2" />
                                    </span>
                                    <br />
                                    Ciudad:
                                    <span t-if="o.partner_id.city">
                                        <span t-field="o.partner_id.city" />
                                    </span>
                                    <br />
                                    Otro nombre:
                                    <span t-field="o.partner_id.other_company" />
                                </div>
                                <div class="clearfix" />
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th t-if="o.origin">
                                                <strong>Order</strong>
                                            </th>
                                            <!--th><strong>State</strong></th-->
                                            <th name="td_sched_date_h">
                                                <strong>Fecha.Plan.</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td t-if="o.origin">
                                                <span t-field="o.origin" />
                                            </td>
                                            <!--td>
                                        <span t-field="o.state"/>
                                    </td-->
                                            <td name="td_sched_date">
                                                <span t-field="o.scheduled_date" />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                Persona que recibió _____________________
                                <br />
                                C.C.___________________________________
                                <br />
                                <br />
                                Fecha de Recepción ______________________
                                <br />
                                Hora de Recepción ______________________
                                <br />
                                <br />
                                Transportador ___________________________
                                <br />

                                <t t-set="no_reserved_product" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty != x.reserved_availability and x.move_line_ids and x.state!='done')" />
                                <p t-if="o.state in ['draft', 'waiting', 'confirmed'] or no_reserved_product">
                                    <i class="fa fa-exclamation-triangle" />
                                    All products could not be reserved. Click on the "Check Availability" button to try to reserve products
                                </p>
                                <p t-field="o.note" />
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </xpath>
    </template>

